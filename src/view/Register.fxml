      <PasswordField fx:id="passwordInp" styleClass="input" stylesheets="@style.css" GridPane.columnIndex="1" GridPane.rowIndex="4" />
      <PasswordField fx:id="password2Inp" styleClass="input" stylesheets="@style.css" GridPane.columnIndex="1" GridPane.rowIndex="5" />
