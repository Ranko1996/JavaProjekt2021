<GridPane alignment="center" hgap="5.0" prefHeight="313.0" prefWidth="314.0" vgap="5.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.RegisterController">
   <rowConstraints>
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <columnConstraints>
      <ColumnConstraints maxWidth="200.0" minWidth="10.0" prefWidth="107.0" />
      <ColumnConstraints maxWidth="158.0" minWidth="0.0" prefWidth="93.0" />
   </columnConstraints>
   <children>
      <Label text="Ime" GridPane.rowIndex="1" />
      <Label prefHeight="18.0" prefWidth="71.0" text="Prezime" GridPane.rowIndex="2" />
